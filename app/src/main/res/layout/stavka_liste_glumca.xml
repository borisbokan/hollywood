<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/slika_glumca_stavka"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignBottom="@+id/txvGodinaRodjenjaSmrti_stavka"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txvPrezimeIme_stavka"
        android:layout_marginStart="18dp"
        android:src="@android:drawable/star_on" />


    <TextView
        android:id="@+id/txvPrezimeIme_stavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/slika_glumca_stavka"
        android:padding="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txvGodinaRodjenjaSmrti_stavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txvPrezimeIme_stavka"
        android:layout_below="@+id/txvPrezimeIme_stavka"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:text="TextView" />


</RelativeLayout>